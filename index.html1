  <script>
    // Set year
    document.getElementById('y').textContent = new Date().getFullYear();

    // Build a mailto from the quote form (works on GitHub Pages without a backend)
    const form = document.getElementById('quoteForm');
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      const data = new FormData(form);
      const get = (k) => (data.get(k) || '').toString().trim();

      const subject = encodeURIComponent('Quote Request - ' + get('service'));
      const lines = [
        'Name: ' + get('name'),
        'Phone: ' + get('phone'),
        'Email: ' + get('email'),
        'Location: ' + get('location'),
        'Service: ' + get('service'),
        'Details:',
        get('details')
      ];
      const body = encodeURIComponent(lines.join('\n'));
      const mailto = `mailto:solidfinishsolutions@gmail.co.uk?subject=${subject}&body=${body}`;
      window.location.href = mailto;
    });
  </script>
