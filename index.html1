  <style>
    :root{
      --bg:#0b1020;       /* base */
      --bg-soft:#0f172a;  /* cards */
      --text:#e5e7eb;     /* copy */
      --muted:#94a3b8;    /* secondary */
      --brand:#22c55e;    /* green */
      --brand-2:#38bdf8;  /* accent */
      --line:#1f2937;     /* borders */
      --max:1200px;
      --radius:18px;
      --shadow:0 10px 30px rgba(0,0,0,.25);
    }
    *{box-sizing:border-box}
    html,body{margin:0;height:100%;scroll-behavior:smooth;background:radial-gradient(1200px 600px at 10% -10%,rgba(34,197,94,.15),transparent 40%), radial-gradient(800px 400px at 120% 10%,rgba(56,189,248,.12),transparent 45%), var(--bg); color:var(--text); font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji","Segoe UI Emoji" }
    a{color:inherit;text-decoration:none}
    .container{max-width:var(--max);margin:0 auto;padding:0 20px}
    /* Header */
    header{position:sticky;top:0;z-index:50;background:rgba(11,16,32,.7);backdrop-filter:saturate(1.2) blur(10px);border-bottom:1px solid var(--line)}
    .nav{display:flex;align-items:center;justify-content:space-between;height:64px}
    .brand{display:flex;gap:12px;align-items:center}
    .logo{width:40px;height:40px;display:grid;place-items:center;border-radius:12px;background:linear-gradient(135deg,#22c55e, #2563eb)}
    .logo svg{width:22px;height:22px;fill:white}
    .brand h1{font-size:18px;letter-spacing:.2px;margin:0;font-weight:700}
    nav ul{display:flex;gap:20px;align-items:center;list-style:none;margin:0;padding:0}
    nav a{padding:8px 12px;border-radius:10px;transition:all .2s ease;color:var(--muted)}
    nav a:hover{background:rgba(148,163,184,.12);color:var(--text)}
    .cta{display:flex;gap:10px}
    .btn{display:inline-flex;align-items:center;gap:10px;padding:12px 16px;border-radius:12px;border:1px solid var(--line);background:var(--bg-soft);color:var(--text);box-shadow:var(--shadow);transition:transform .08s ease, box-shadow .2s ease}
    .btn:hover{transform:translateY(-1px)}
    .btn.primary{background:linear-gradient(135deg,rgba(34,197,94,.9),rgba(56,189,248,.9));border-color:transparent}
    .btn.ghost{background:transparent}

    /* Hero */
    .hero{padding:80px 0 40px}
    .hero .wrap{display:grid;grid-template-columns:1.2fr .8fr;gap:36px;align-items:center}
    .kicker{display:inline-block;padding:6px 10px;border-radius:999px;border:1px solid var(--line);color:var(--muted);font-size:12px;letter-spacing:.4px}
    .title{font-size:clamp(28px,5vw,52px);line-height:1.05;margin:16px 0 12px;font-weight:800}
    .subtitle{font-size:clamp(15px,2.2vw,18px);color:var(--muted);max-width:60ch}
    .hero-cta{margin-top:22px;display:flex;gap:12px;flex-wrap:wrap}

    .card{background:linear-gradient(180deg,rgba(15,23,42,.9),rgba(15,23,42,.75));border:1px solid var(--line);border-radius:var(--radius);padding:20px}
    .illus{aspect-ratio:4/3;border-radius:14px;background:
      radial-gradient(120px 80px at 20% 25%, rgba(34,197,94,.2), transparent 60%),
      radial-gradient(130px 90px at 80% 30%, rgba(56,189,248,.2), transparent 60%),
      repeating-linear-gradient(135deg, rgba(255,255,255,.06) 0 2px, transparent 2px 10px),
      linear-gradient(135deg, #0b1228, #0b0f1f);
      border:1px solid var(--line);position:relative}
    .illus::after{content:"SFS";position:absolute;bottom:12px;right:16px;font-weight:800;letter-spacing:4px;color:rgba(255,255,255,.08);font-size:clamp(22px,12vw,64px)}

    /* Services */
    section{padding:60px 0}
    .section-head{display:flex;align-items:end;justify-content:space-between;gap:16px;margin-bottom:24px}
    h2{margin:0;font-size:clamp(22px,3.8vw,32px)}
    p.lead{margin:0;color:var(--muted)}

    .grid{display:grid;gap:16px}
    .grid.cols-3{grid-template-columns:repeat(3,1fr)}
    .grid.cols-4{grid-template-columns:repeat(4,1fr)}
    .service{border:1px solid var(--line);border-radius:16px;padding:18px;background:rgba(15,23,42,.6)}
    .service h3{margin:0 0 6px;font-size:18px}
    .badge{display:inline-block;padding:4px 10px;border-radius:999px;background:rgba(34,197,94,.12);border:1px solid rgba(34,197,94,.35);color:#a7f3d0;font-size:12px}

    /* Gallery */
    .gallery{display:grid;grid-template-columns:repeat(6,1fr);gap:10px}
    .tile{aspect-ratio:1/1;border-radius:12px;border:1px solid var(--line);background:linear-gradient(180deg,#0d1328,#0c1122);position:relative;overflow:hidden}
    .tile::before{content:"";position:absolute;inset:0;background:repeating-linear-gradient(45deg,rgba(255,255,255,.05) 0 2px,transparent 2px 12px)}
    .tile span{position:absolute;bottom:8px;left:10px;font-size:12px;color:var(--muted)}

    /* Testimonials */
    .testimonial{display:flex;flex-direction:column;gap:10px;border:1px solid var(--line);border-radius:16px;padding:18px;background:rgba(15,23,42,.6)}
    .quote{font-size:15px;color:#e2e8f0}
    .who{color:var(--muted);font-size:13px}

    /* Areas */
    .chips{display:flex;flex-wrap:wrap;gap:10px}
    .chip{padding:8px 12px;border-radius:999px;border:1px solid var(--line);background:rgba(148,163,184,.08);color:#cbd5e1;font-size:13px}

    /* Contact */
    form{display:grid;gap:12px}
    .input{width:100%;padding:12px 14px;border-radius:12px;border:1px solid var(--line);background:rgba(2,6,23,.6);color:var(--text)}
    textarea.input{min-height:120px;resize:vertical}
    .inline{display:flex;gap:12px;flex-wrap:wrap}

    /* Footer */
    footer{border-top:1px solid var(--line);padding:30px 0;color:var(--muted)}

    /* Responsive */
    @media (max-width: 980px){
      .hero .wrap{grid-template-columns:1fr}
      .gallery{grid-template-columns:repeat(3,1fr)}
      .grid.cols-3{grid-template-columns:1fr}
      .grid.cols-4{grid-template-columns:1fr 1fr}
    }
    @media (max-width: 520px){
      nav ul{display:none}
      .gallery{grid-template-columns:repeat(2,1fr)}
      .cta{display:none}
    }
  </style>
